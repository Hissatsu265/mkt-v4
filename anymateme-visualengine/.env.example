# AnymateMe EduHub Environment Example File
# Copy this file to .env and fill in the appropriate values
# DO NOT commit your actual .env file to version control

# ==============================================================================
# GENERAL CONFIGURATION
# ==============================================================================

# Environment setting (LOCAL, DEV, STAGING, PROD)
# Controls which set of environment-specific variables will be used
ENVIRONMENT=LOCAL
IN_DOCKER=false

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AnymateMe EduHub
PROJECT_VERSION=1.0.0-beta
PROJECT_DESCRIPTION=AnymateMe EduHub is a platform that provides educational resources and tools for students and educators.

# CORS Configuration
# Asterisk allows requests from any origin - restrict in production environments
BACKEND_CORS_ORIGINS=*

# File Upload Configuration
UPLOAD_FOLDER=uploads

# External API Keys
# Fill with your actual API key
ICONFINDER_API_KEY=your_iconfinder_api_key_here

# AI Model Configuration
AI_MODEL=phi4-extended

# ==============================================================================
# LOCAL ENVIRONMENT CONFIGURATION
# ==============================================================================

# Ollama API Configuration
LOCAL_OLLAMA_API_ENDPOINT=http://localhost:11434

# MongoDB Configuration
LOCAL_MONGODB_URL=mongodb://username:password@localhost:27017/database?authSource=database
LOCAL_MONGODB_DB_NAME=anymateme_eduhub
LOCAL_MONGODB_COLLECTION_NAME=default
LOCAL_MONGODB_LOGS_COLLECTION=api_logs
LOCAL_MONGO_HOST=localhost
LOCAL_MONGO_PORT=27017
LOCAL_MONGO_USERNAME=username
LOCAL_MONGO_PASSWORD=password

# Server Configuration
LOCAL_HOST=0.0.0.0
LOCAL_PORT=6003
LOCAL_LOG_LEVEL=DEBUG

# ==============================================================================
# DEV ENVIRONMENT CONFIGURATION
# ==============================================================================

# Ollama API Configuration
DEV_OLLAMA_SERVICE_1_URL=http://ollama-1:11434
DEV_OLLAMA_SERVICE_2_URL=http://ollama-2:11434

# MongoDB Configuration
DEV_MONGODB_URL=mongodb://username:password@localhost:27017/database?authSource=database
DEV_MONGODB_DB_NAME=anymateme_eduhub_dev
DEV_MONGODB_COLLECTION_NAME=default
DEV_MONGODB_LOGS_COLLECTION=api_logs
DEV_MONGO_HOST=localhost
DEV_MONGO_PORT=27017
DEV_MONGO_USERNAME=username
DEV_MONGO_PASSWORD=password

# Server Configuration
DEV_HOST=0.0.0.0
DEV_PORT=6001
DEV_LOG_LEVEL=DEBUG

# ==============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# ==============================================================================

# Ollama API Configuration
STAGING_OLLAMA_SERVICE_1_URL=http://ollama-service-1:11434
STAGING_OLLAMA_SERVICE_2_URL=http://ollama-service-2:11434

# MongoDB Configuration
STAGING_MONGODB_URL=mongodb://username:password@localhost:27017/database?authSource=database
STAGING_MONGODB_DB_NAME=anymateme_eduhub_staging
STAGING_MONGODB_COLLECTION_NAME=default
STAGING_MONGODB_LOGS_COLLECTION=api_logs
STAGING_MONGO_HOST=localhost
STAGING_MONGO_PORT=27017
STAGING_MONGO_USERNAME=username
STAGING_MONGO_PASSWORD=password

# Server Configuration
STAGING_HOST=0.0.0.0
STAGING_PORT=8001
STAGING_LOG_LEVEL=INFO

# ==============================================================================
# PROD ENVIRONMENT CONFIGURATION
# ==============================================================================

# Ollama API Configuration
PROD_OLLAMA_SERVICE_1_URL=http://ollama-service-1:11434
PROD_OLLAMA_SERVICE_2_URL=http://ollama-service-2:11434

# MongoDB Configuration
PROD_MONGODB_URL=mongodb://username:password@localhost:27017/database?authSource=database
PROD_MONGODB_DB_NAME=anymateme_eduhub
PROD_MONGODB_COLLECTION_NAME=default
PROD_MONGODB_LOGS_COLLECTION=api_logs
PROD_MONGO_HOST=localhost
PROD_MONGO_PORT=27017
PROD_MONGO_USERNAME=username
PROD_MONGO_PASSWORD=password

# Server Configuration
