# Job Retention Configuration
JOB_RETENTION_HOURS=24
VIDEO_RETENTION_HOURS=72
CLEANUP_INTERVAL_MINUTES=60

# Directus CMS Configuration
DIRECTUS_ACCESS_TOKEN=your_directus_access_token_here
DIRECTUS_FOLDER_ID=your_folder_id_here
DIRECTUS_URL="https://cms.example.com"

# MongoDB Configuration
MONGODB_Pass=your_mongodb_password
MONGODB_URI=mongodb://user:password@host:port
MONGODB_DATABASE=anymateme_eduhub_prod
MONGODB_JOBS_COLLECTION=video_jobs
MONGODB_EFFECT_JOBS_COLLECTION=effect_jobs

# Authentication Token
AUTH_TOKEN="your_jwt_token_here"

# Performance Configuration
MAX_PARALLEL_WORKERS=3  # Max parallel video jobs (auto-calculated based on GPU, this is the upper limit)
GPU_MEMORY_PER_JOB_GB=15  # GPU memory reserved per job (in GB)
GPU_MEMORY_RESERVE_GB=5  # Safety buffer for system (in GB)
ENABLE_PARALLEL_PROCESSING=true  # Set to false to revert to serial processing (1 job at a time)
